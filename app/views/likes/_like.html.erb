<div class="like-count">
  <% if post.liked_by?(current_user) %>
    <%= link_to post_likes_destroy_path(post.id), remote: true, method: :delete do %>
      <i class="fas fa-heart" style="color: red;"></i>
    <% end %>
  <% else %>
    <%= link_to post_likes_path(post.id), remote: true,  method: :post do %>
      <i class="far fa-heart">
      </i>
    <% end %>
  <% end %>
  いいね件数: <%= post.likes.count %>
</div>
